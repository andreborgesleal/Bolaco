@model DWM.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Log in";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="panel panel-warning" style="margin-top: 20px">
        <div class="panel-heading" style="height: 50px">
            <h2 class="panel-title col-md-12">
                Palpite <small style="color: #000; font-family: Verdana; font-size: small">Informe seu e-mail e senha para dar o palpite.</small>
            </h2>
        </div>
        <div class="panel-body" style="background-color: #fff;">
            <div class="row">
                <div class="col-md-8">
                    @*@Html.ValidationSummary(false)*@
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, "E-mail", new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Seu e-mail" })<br />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-minus"></i></span>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })<br />
                            </div>
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Registre-se", "Index", null, htmlAttributes: new { @style="font-weight: bold" }) caso não possua uma conta.
                    </p>
                    @*<p>
                        @Html.ActionLink("Esqueci minha Senha", "Forgot", "EsqueciMinhaSenha", null, htmlAttributes: new { @style = "font-weight: bold" })
                    </p>*@
                    <div class="col-md-12" style="height: 120px; padding-top: 50px; width: 120%">
                        <h4>"Seu cartão BNDES é aceito em todas as lojas da Norte Refrigeração"</h4>
                    </div>
                    <section id="loginForm"></section>
                </div>
                <div class="col-md-4">
                    <img src="../../Content/images/bonecologin2.png" alt="0">
                </div>
            </div>
        </div>
        <div class="panel-footer" style="background-color: #3c533f; padding-bottom: 10px">
            <div class="row">
                <div class="col-md-4" id="div-salvar">
                    <input type="submit" value="Acessar" class="btn btn-default" onclick="validaLogin();" />
                </div>
            </div>
        </div>
    </div>
}

    </div>
</div>

