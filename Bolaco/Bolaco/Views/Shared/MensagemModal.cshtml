@model System.String
@{
    Layout = null;
}
 <div id="myMessageModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myMessageModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myMessageModalLabel">Mensagem</h3>
  </div>
  <div class="modal-body">
    <p>@Model</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Fechar</button>
    @*<button class="btn btn-primary">Save changes</button>*@
  </div>
</div>
    
<a id="linkModal" href="#myMessageModal" data-toggle="modal"></a>